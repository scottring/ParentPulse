rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ==================== Helper Functions ====================

    function isSignedIn() {
      return request.auth != null;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function belongsToFamily(familyId) {
      return isSignedIn() && getUserData().familyId == familyId;
    }

    function isParent() {
      return isSignedIn() && getUserData().role == 'parent';
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    // ==================== Users ====================
    // Users can read/write their own document only
    match /users/{userId} {
      allow read: if isOwner(userId);
      allow create: if isOwner(userId)
        && request.resource.data.keys().hasAll(['userId', 'email', 'familyId', 'role', 'onboardingStatus']);
      allow update: if isOwner(userId)
        && request.resource.data.userId == resource.data.userId
        && request.resource.data.familyId == resource.data.familyId;
    }

    // ==================== Families ====================
    // Family members can read; parents can update
    match /families/{familyId} {
      allow read: if belongsToFamily(familyId);
      allow create: if isSignedIn();
      allow update: if belongsToFamily(familyId) && isParent();
    }

    // ==================== Manuals ====================
    // Family members can read; parents can create/update/delete
    match /manuals/{manualId} {
      allow read: if isSignedIn() && belongsToFamily(resource.data.familyId);
      allow create: if isSignedIn() && isParent()
        && request.resource.data.keys().hasAll(['manualId', 'familyId', 'type', 'title', 'layers']);
      allow update: if isSignedIn() && belongsToFamily(resource.data.familyId) && isParent()
        && request.resource.data.familyId == resource.data.familyId;
      allow delete: if isSignedIn() && belongsToFamily(resource.data.familyId) && isParent();
    }

    // ==================== Entries ====================
    // Family members can read and update; parents can create/delete
    match /entries/{entryId} {
      allow read: if isSignedIn() && belongsToFamily(resource.data.familyId);
      allow create: if isSignedIn()
        && (isParent() || belongsToFamily(request.resource.data.familyId))
        && request.resource.data.keys().hasAll(['entryId', 'familyId', 'type', 'source', 'coherenceLayer', 'title', 'content']);
      allow update: if isSignedIn() && belongsToFamily(resource.data.familyId)
        && request.resource.data.familyId == resource.data.familyId;
      allow delete: if isSignedIn() && belongsToFamily(resource.data.familyId) && isParent();
    }

    // ==================== Yearbooks ====================
    // Family members can read; parents can create/update
    match /yearbooks/{yearbookId} {
      allow read: if isSignedIn() && belongsToFamily(resource.data.familyId);
      allow create: if isSignedIn() && isParent()
        && request.resource.data.keys().hasAll(['yearbookId', 'familyId', 'personId', 'year']);
      allow update: if isSignedIn() && belongsToFamily(resource.data.familyId) && isParent()
        && request.resource.data.familyId == resource.data.familyId;
    }

    // ==================== Conversations ====================
    // Only the conversation owner can read/write/delete
    match /conversations/{conversationId} {
      allow read: if isSignedIn()
        && (resource.data.userId == request.auth.uid || belongsToFamily(resource.data.familyId));
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['conversationId', 'familyId', 'userId', 'purpose']);
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid
        && request.resource.data.userId == resource.data.userId;
      allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // ==================== Check-ins ====================
    // Family members can read; only the author can write
    match /checkins/{checkinId} {
      allow read: if isSignedIn() && belongsToFamily(resource.data.familyId);
      allow create: if isSignedIn()
        && request.resource.data.userId == request.auth.uid
        && request.resource.data.keys().hasAll(['checkinId', 'familyId', 'userId', 'week', 'responses']);
      allow update: if isSignedIn() && resource.data.userId == request.auth.uid;
    }
  }
}
